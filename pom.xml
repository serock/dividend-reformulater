<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.serock</groupId>
    <artifactId>dividend-reformulater</artifactId>
    <version>2024.0.0-SNAPSHOT</version>
    <name>${project.artifactId}</name>
    <licenses>
        <license>
            <name>MIT</name>
        </license>
    </licenses>
    <scm>
        <url>https://github.com/serock/dividend-reformulater</url>
    </scm>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <excludeArtifactIds>libreoffice</excludeArtifactIds>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.4.2</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>app.DividendReformulater</mainClass>
                            <addBuildEnvironmentEntries>true</addBuildEnvironmentEntries>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>dependency/</classpathPrefix>
                        </manifest>
                        <manifestEntries>
                            <Class-Path>${libreoffice.home}/program/classes/libreoffice.jar</Class-Path>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/bin.xml</descriptor>
                    </descriptors>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <maven.compiler.release>17</maven.compiler.release>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.apache.pdfbox</groupId>
            <artifactId>pdfbox</artifactId>
            <version>3.0.4</version>
        </dependency>
        <dependency>
            <groupId>org.libreoffice</groupId>
            <artifactId>libreoffice</artifactId>
            <version>24.8.4</version>
            <scope>system</scope>
            <systemPath>${libreoffice.home}/program/classes/libreoffice.jar</systemPath>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>unix64</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
                <file>
                    <exists>/usr/lib64/libreoffice/program/soffice</exists>
                </file>
            </activation>
            <properties>
                <assembly.format>tar.gz</assembly.format>
                <assembly.lineEnding>keep</assembly.lineEnding>
                <libreoffice.home>/usr/lib64/libreoffice</libreoffice.home>
            </properties>
        </profile>
        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
                <file>
                    <exists>/usr/lib/libreoffice/program/soffice</exists>
                </file>
            </activation>
            <properties>
                <assembly.format>tar.gz</assembly.format>
                <assembly.lineEnding>keep</assembly.lineEnding>
                <libreoffice.home>/usr/lib/libreoffice</libreoffice.home>
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <assembly.format>zip</assembly.format>
                <assembly.lineEnding>windows</assembly.lineEnding>
                <libreoffice.home>/C:/PROGRA~1/LibreOffice</libreoffice.home>
            </properties>
        </profile>
    </profiles>
</project>
